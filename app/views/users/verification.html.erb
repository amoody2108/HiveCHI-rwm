<header>
  <div class="navbar-fixed">
    <nav class="light-blue">
      <div class="nav-wrapper">
        <h4 class="center">Welcome Index</h4>
      </div>
    </nav>
  </div>
</header><!-- /header -->
<main>
  <div class="container">
    <% if flash[:errors] && !flash[:errors].empty? %>
    <ul>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>

    <% unless @user.phone_verified %>
    <div class="row">
      <%= form_tag(action: "verify") do %>
        <div class="input-field col s6">
          <%= label_tag "Phone verification code" %>
          <%= text_field_tag :phone_token %>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
          <%= submit_tag "Verify", :class => "btn" %>
        </div>
      <% end %>
    <% end %>
    </div>
      <% unless @user.email_verified %>
    <div class="row">
        <%= form_tag(action: "resend_confirmation_email", :class => "col s12") do %>
          <%= submit_tag "Resend Email", :class => "btn" %>
        <% end %>
      <% end %>
    </div>
  </div>
</main>
  <!-- footer navigator -->
<div data-role="footer" data-id="foo1" data-position="fixed">
  <%= render "shared/navbar" %>
</div><!-- /footer -->


