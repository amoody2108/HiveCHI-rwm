<div class="row">
  <%= form_for @student, url: student_path, html: { :class => "col s12", "data-ajax" => false } do |f| %>
    <% if @student.errors.any? %>
      <div class="error">
        <p><%= pluralize(@student.errors.count, "error") %> prevented your profile from being saved:</p>
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.fields_for :user do |u| %>
      <div class="row">
        <div class="input-field col s6">
          <%= u.label :email %>
          <%= u.text_field :email %>
        </div>
        <div class="input-field col s6">
          <%= u.label :phone %>
          <%= u.text_field :phone %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= u.label :password %>
          <%= u.password_field :password %>
        </div>
        <div class="input-field col s6">
          <%= u.label :password_confirmation %>
          <%= u.password_field :password_confirmation %>
        </div>
          <%= u.hidden_field :time_zone %>
      </div>
      <script>
      $('#user_time_zone').val(getTimeZone())
      </script>
    <% end %>
    <div class="row">
    <%= f.label :username %>
    <%= f.text_field :username %>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <select>
          <option><%= collection_select(:student, :school_id, School.all, :id, :name) %></option>
        </select>
          <%= f.label "School" %>
      </div>
    </div>
    <%= f.label :home_address %>
    <%= f.text_field :home_address %>
    <%= f.hidden_field :nudges_enabled, value: false %>
    <%= f.check_box :nudges_enabled, { checked: @student.nudges_enabled != false }, true, false %>
    <%= f.label :nudges_enabled, "Allow other users to send me text message notifications" %>
    <%= f.submit "Submit" %>
  <% end %>
</div>
