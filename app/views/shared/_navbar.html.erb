<div class="container">
  <div class="row">
    <div class="col s12">
    <ul class="row">
      <div class="col s3">
        <li><%= link_to 'Back', :back, "data-ajax" => "false", :class => "white-text center" %></li>
      </div>
      <% if current_user && current_user.verified? %>
      <div class="col s3">
        <li><%= link_to "Home", home_path,  "data-ajax" => "false", :class => "white-text center" %></li>
      </div>
      <div class="col s3">
        <li><%= link_to("Profile", edit_profile_path, "data-ajax" => "false", :class => "white-text center") %></li>
      </div>
      <div class="col s3">
        <li><%= button_to("Logout", logout_path, :method => :delete, "data-ajax" => "false", :class => "white-text center") %></li>
      </div>
      <% else %>
      <div class="col s3">
        <li><%= link_to("Login", login_path, "data-ajax" => "false", :class => "white-text center") %></li>
      </div>
      <%end%>
    </ul>
  </div>
</div>

